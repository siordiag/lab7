<h1>Yet Another 11ty <strong>Boilerplate</strong></h1>


<div class="max-w-4xl mx-auto p-6">
    <h1 class="text-3xl font-bold text-center mb-6">API Data with Alpine.js</h1>

    <!-- Random Users Section -->
    <section class="mb-8 p-4 bg-white rounded shadow">
      <h2 class="text-2xl font-semibold mb-4">Random Users</h2>
      
      <div x-data="{ users: [] }" x-init="fetch('https://randomuser.me/api/?results=5')
          .then(response => response.json())
          .then(data => users = data.results)">
        
        <template x-for="user in users" :key="user.login.uuid">
          <div class="flex items-center p-3 border-b border-gray-200">
            <img :src="user.picture.medium" alt="User Image" class="w-12 h-12 rounded-full mr-4">
            <div>
              <p class="text-lg font-medium" x-text="user.name.first + ' ' + user.name.last"></p>
              <p class="text-gray-600 text-sm" x-text="user.email"></p>
            </div>
          </div>
        </template>

      </div>
    </section>

    <!-- Random Dog Image Section -->
    <section class="p-4 bg-white rounded shadow">
      <h2 class="text-2xl font-semibold mb-4">Random Dog Image</h2>

      <div x-data="{ dogImage: '' }" x-init="fetch('https://dog.ceo/api/breeds/image/random')
          .then(response => response.json())
          .then(data => dogImage = data.message)">
        
        <div class="flex justify-center">
          <img :src="dogImage" alt="Random Dog" class="rounded shadow-lg max-w-full h-auto">
        </div>
      </div>
    </section>

  </div>
